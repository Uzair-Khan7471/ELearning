@model IEnumerable<LearningManagementSystem.Models.Category>
@{
    ViewData["Title"] = "Category Index";
    Layout = "DashboardLayout";
}

@if (TempData["message"] != null)
{
    @*    <script>
        var text = '@TempData["message"].ToString()';
        alert(text);
    </script>*@

    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!</strong> @TempData["message"].ToString()
    </div>



}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Dashboard</li>
            <li class="breadcrumb-item">View Category</li>


        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Category</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var x in Model)
            {
                
            <tr>
                <th>@Html.DisplayFor(y=>x.Id)</th>
                <th>@Html.DisplayFor(y=>x.Name)</th>
                    <td><a asp-action="Edit" asp-route-id="@x.Id">Edit</a></td>
                    <td><a onclick="return confirm('Are you sure you want to delete this Category : @x.Name')"  asp-action="Delete" asp-route-id="@x.Id"> Delete </a></td>
            </tr>

            }
           
        </tbody>
    </table>
</div>